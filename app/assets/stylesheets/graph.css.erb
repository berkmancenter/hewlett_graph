/*
  Place all the styles related to the matching controller here.
  They will automatically be included in application.css.
*/
html, body, svg {
    margin: 0;
    padding: 0;
    font-size: 13px;
}
svg, body, html {
    font-family: Arial, sans-serif;
}
body {
    padding: 0.5em 0.2em 0;
    margin: 0 auto;
    background-image: url('<%= asset_path 'cross_scratches.png' %>');
}
body.density {
    width: 960px;
}
circle.node {
    fill-opacity: 0.7;
}
circle:hover {
    fill-opacity: 1;
    fill: #ccc !important;
    stroke: #666 !important;
}
svg.density {
    background-color: #999;
    box-shadow: inset 0 0 20px #333;
    border-radius: 20px;
    display: inline-block;
    position: relative;
}
g.node {
    cursor: pointer;
}
circle.activated {
    fill: #EE0 !important;
    stroke: #660 !important;
}
.node.open circle, .node.closed circle {
   /*stroke: #123 !important;
   stroke-width: 0px;*/
} 
.node.closed circle {
    /*fill: #ABC !important;*/
}
.node.open text {
    font-weight: bold;
}
.node.open circle {
    /*fill: #123 !important;*/
}
g.node.idea {
    cursor: auto;
}
.link {
    fill: none;
    stroke: #ccc;
    stroke-width: 1.5px;
}
#dataClose {
    position: absolute;
    top: 6px;
    right: 10px;
    background: #123;
    color: #eee;
    padding: 0.3em 0.6em;
    border-radius: 6px;
}
#dataClose:hover {
    background-color: #234;
}
#graph, #notGraph {
    display: inline-block;
}
#graph {
    position: relative;
}
body.density #notGraph {
    width: 242px;
}
#notGraph {
    vertical-align: top;
    margin: 0;
    margin-left: 1em;
}
.panel {
    padding: 0.3em 1em 1em;
    margin-bottom: 0.4em;
    border-radius: 20px;
    border: 4px solid #888;
    background-color: #123;
    color: white;
    min-width: 214px;
}
#questions ul {
    padding-left: 0;
}
#questions li {
    margin-bottom: 0.5em;
    padding: 0.3em;
    border-radius: 3px;
}
#questions li:hover, #questions li.selected {
    background-color: #345;
}
.panel h2 {
    text-align: center;
    margin: 0.4em 0;
}
#notGraph ul {
    list-style-type: none;
}
#data {
    position: absolute; 
    bottom: 0;
    z-index: 1;
    padding: 0.4em 20px 1em;
    background-color: rgba(255, 255, 255, 0.65);
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
    width: 660px;
    text-align: center;
}
dt {
    font-weight: bold;
}
dd {
    margin-left: 0;
    font-size: 0.9em;
}
.sortLabel {
    position: absolute;
    display: none;
    border-radius: 4px;
    background-color: rgba(255, 255, 255, 0.65);
    padding: 0.6em;
    font-size: 0.8em;
}
.inline {
    display: inline-block;
    width: 33%;
    margin-bottom: 0.4em;
}
.swatch {
    display: inline-block;
    width: 21px;
    height: 21px;
    border-radius: 3px;
    margin-right: 0.5em;
    vertical-align: middle;
}
.legendEntry {
    padding: 0.3em;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.legendText {
    vertical-align: middle;
}
#d3Nodes {
    display: none;
}
#controls {
    font-size: 12px;
}
#controls h2 {
    cursor: pointer;
}
body.tree #controls, body.tree #questions, body.tree #legend {
    display: none;
}
body.tree .legendEntry {
    display: inline-block;
    margin: 0 1em;
}
body.tree #notGraph {
    display: block;
    text-align: center;
}
a.question {
    color: white;
    text-decoration: none;
    display: block;
}
#evidenceHub {
    text-align: center;
}
